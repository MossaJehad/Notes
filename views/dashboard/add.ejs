<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/dashboard">
                            Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        Add Note
                    </li>
                </ol>
            </nav>
            <div class="col">
                <div class="col d-flex justify-content-between align-items-center">
                    <h1 class="h3">Add Note</h1>
                </div>
            </div>
        </div>
    </div>

    <form action="/dashboard/add" method="POST" class="postion-relative">
        <div class="form-group mb-4 postion-absloute" style="left: -1px; top: 1px; right: 1px;">
            <input required type="text" class="form-control fw-bold border-0 fs-4" name="title" id="title" placeholder="Title">
        </div>
        <div class="form-group mb-4">
            <textarea required rows="12" placeholder="Take a note..." class="form-control pt-3 fs-4" name="body" id="body"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg" type="submit">
                + Add Note
            </button>
        </div>
    </form>

</div>